<!DOCTYPE html>
<html>
<head>
  <title>MailGun</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% elsif flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= yield %>

</body>
</html>
